<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.treelzebub.zinepress">

    <application
        android:name=".ZinePressApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.treelzebub.zinepress.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="net.treelzebub.zinepress.ui.activity.LoginActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar">
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <data
                    android:host="umap.treelzebub.net"
                    android:scheme="oauth" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
    </application>

</manifest>
